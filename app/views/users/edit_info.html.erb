<%= form_for @user, :url => { :action => 'update_info' } do |f| %>
<%= render 'shared/error_messages', :target => @user %>

	<p><%= f.label :first_name %><br />
	<%= f.text_field :first_name %></p>
	
	<p><%= f.label :last_name %><br />
		<%= f.text_field :last_name %></p>

	<p><%= f.label :email %><br />
		<%= f.text_field :email %></p>

	<p><%= f.submit 'Update' %></p>
<% end %>
