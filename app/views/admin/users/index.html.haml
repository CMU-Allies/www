= render layout: "admin/shared/tabbed", locals: {tab: "users"} do
  %table.admin-table
    %tr
      %th Login
      %th Name
      %th Email
      %th Level
      %th Operations
    - @users.each do |user|
      %tr{ class: cycle("even", "odd")}
        %td= user.login
        %td= user.full_name
        %td= user.email
        %td= user.level_text
        %td
          = link_to "Edit", edit_admin_user_url(user)
          |
          = link_to "Delete", admin_user_url(user), :method => :delete, data: {confirm: "Are you sure you want to delete this user?"}
