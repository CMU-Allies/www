= render layout: "admin/shared/tabbed", locals: {tab: "updates"} do
  = form_for @update, url: admin_updates_path do |f|
    %h2 Create update
    = display_error_messages @update
    %div
      = f.label :title
      = f.text_field :title
    %div
      = f.label :body
      = f.text_area :body, :id => "markdown-input"
    %article#markdown-preview
    %div= f.submit
                  