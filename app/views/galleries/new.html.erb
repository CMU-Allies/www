<h1>New Gallery</h1>

<%= form_for(@gallery, :html => {:multipart => true}) do |f| %>
	<%= render 'shared/error_messages', :target => @gallery %>


	<p><%= f.label :name %><br />
	<%= f.text_field :name %></p>

	<p><%= f.label :description %><br />
	<%= f.text_area :description %></p>

	<p>File to upload<br />
	<%= file_field :gallery, :zipfile %></p>

	<p><%= f.submit 'Create' %></p>
<% end %>

<%= link_to 'Back', galleries_path %>
