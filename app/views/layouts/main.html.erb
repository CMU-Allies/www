      <html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
      <head>
       <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
				 <title><%='DEVELOPMENT - ' if ENV['RAILS_ENV'] == 'development' -%>ALLIES@CMU</title>
				<%= stylesheet_link_tag 'main' %>
				<%= javascript_include_tag :defaults %>
	<script type="text/javascript">
  //<![CDATA[
	//Detect IE5.5+
	version=0
	if (navigator.appVersion.indexOf("MSIE")!=-1){
	temp=navigator.appVersion.split("MSIE")
	version=parseFloat(temp[1])
	}

	if (version<7.0 && version !=0 ) //NON IE browser will return 0
	document.write("You appear to be using Internet Explorer 6 or below.\nThis browser does not properly support the CSS used in this site.\nPlease upgrade to IE7 or use a more advanced browser like Firefox.<p/>")
  //]]>
	</script>

</head>

<body class="alliescss">

<div id="container">
	<div id="header" style="background-image: url(/images/banner/<%=1+rand(4)%>.jpg);">
		<div id="logo">
		</div>
		<div id="navbar">
			<div>
				<ul>
					<li><%= link_to 'Home', :controller => 'static'  %></li>
					<li><%= link_to 'About', :controller => 'static', :action => 'about' %></li>
					<li><%= link_to 'Resources', resources_path %></li>
					<li><%= link_to 'Calendar', :controller => 'static', :action => 'calendar' %></li>
					<li><%= link_to 'News', news_feeds_path %></li>
          <li><%= link_to 'Library', books_path %></li>
          <li><%= link_to 'Gallery', galleries_path %></li>
					<% if logged_in? %>
						<li><%= link_to 'Account', user_path(self.current_user) %></li>
						<li><%= link_to 'Log out', :logout %></li>
					<% else %>
						<li><%= link_to 'Log in', :login %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>

<div id="mainContent">
	<% if flash[:notice] %>
		<p id="notice"><%= flash[:notice] %></p>
		<script type="text/javascript">
			new Effect.Fade('notice', { duration: 1.0, delay: 3.0 } );
		</script>
	<% end %>
	  <%= yield %>
