!!! 5
%html
  %head
    %title= layout_title
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = javascript_include_tag "https://cdn.rawgit.com/showdownjs/showdown/1.2.3/dist/showdown.min.js"
    = csrf_meta_tags
    = favicon_link_tag 'favicon.ico'
  %body
    #side-column
      = render partial: "shared/sidebar_top"
      = render partial: "shared/sidebar_bottom"
    #main-column
      - if flash[:notice]
        #notice= flash[:notice]
      - if flash[:alert]
        #alert= flash[:alert]
      = yield
    #last-column <iframe src="https://www.google.com/calendar/embed?showTitle=0&amp;showNav=0&amp;showDate=0&amp;showPrint=0&amp;showTabs=0&amp;showCalendars=0&amp;showTz=0&amp;mode=AGENDA&amp;height=600&amp;wkst=1&amp;bgcolor=%23FFFFFF&amp;src=cp6sqn1q3uonjij5hp0qnveo8o%40group.calendar.google.com&amp;color=%23B1440E&amp;src=dv0j3n992gs42rjpiart0jg9sg%40group.calendar.google.com&amp;color=%232F6309&amp;ctz=America%2FNew_York" style=" border-width:0 " width="25%" height="100%" frameborder="0" scrolling="no"></iframe>
    %div{:style => "clear: both"}
