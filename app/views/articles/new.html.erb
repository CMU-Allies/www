<h1>New article</h1>

<%= form_for(@article) do |f| %>
  <%= render 'shared/error_messages', :target => @article %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
	<p>
		Top story? <%= f.check_box :topstory %>
	</p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>
