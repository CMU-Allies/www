<h1>Editing article</h1>

<%= form_for(@article) do |f| %>
  <%= render 'shared/error_messages', :target => @article %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
	<p>Top story? <%= f.check_box :topstory %></p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @article %> |
<%= link_to 'Back', articles_path %>
